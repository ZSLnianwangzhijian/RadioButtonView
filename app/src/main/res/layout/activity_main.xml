<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2196F3"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.pwcong.radiobuttonviewdemo.MainActivity">

    <me.pwcong.radiobuttonview.view.RadioButtonView
        android:id="@+id/rbv_1"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true" />

    <me.pwcong.radiobuttonview.view.RadioButtonView
        android:id="@+id/rbv_2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/rbv_1"
        app:frameColor="#FF4081"
        app:textColor="#FFFFFF"
        app:strokeWidth="6dp"
        app:margin="12dp"
        android:layout_centerHorizontal="true" />

    <me.pwcong.radiobuttonview.view.RadioButtonView
        android:id="@+id/rbv_3"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_below="@+id/rbv_2"
        app:margin="8dp"
        app:strokeWidth="4dp"
        app:frameColor="#FFC107"
        app:textColor="#FFFFFF"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
